<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_habit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".NewHabitActivity">

    <!-- Tytuł -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEW HABIT"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"/>

    <!-- Pole tekstowe na nazwę nawyku -->
    <EditText
        android:id="@+id/etHabitName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter habit name"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="16dp"/>

    <!-- Sekcja częstotliwości + miniatura żaby -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <!-- Miniatura żaby -->
        <ImageView
            android:id="@+id/imgMiniFrog"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/frog_image"
            android:contentDescription="Mini Frog"
            android:layout_marginEnd="12dp"/>

        <!-- Spinner częstotliwości -->
        <Spinner
            android:id="@+id/spinnerFreq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/frequencies"/>
    </LinearLayout>

    <!-- Przełącznik powiadomień -->
    <Switch
        android:id="@+id/switchNotifs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:layout_marginBottom="24dp"/>

    <!-- Przycisk ADD -->
    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Dolny pasek nawigacji -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/teal_200"
        android:gravity="center"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/btn_nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Home"/>

        <Button
            android:id="@+id/btn_nav_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Habit List"/>

        <Button
            android:id="@+id/btn_nav_new"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="New Habit"/>

        <Button
            android:id="@+id/btn_nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Profile"/>
    </LinearLayout>

</LinearLayout>
